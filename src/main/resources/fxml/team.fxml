<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javafxdemo.controller.TeamController">
    <Label layoutX="206.0" layoutY="14.0" text="Create Team">
        <font>
            <Font size="34.0" />
        </font>
    </Label>
    <Label layoutX="58.0" layoutY="93.0" prefHeight="25.0" prefWidth="74.0" text="Teamname:" />
    <TextField fx:id="teamName" layoutX="133.0" layoutY="93.0" prefHeight="25.0" prefWidth="141.0" />
    <Label layoutX="326.0" layoutY="93.0" prefHeight="25.0" prefWidth="74.0" text="City:" />
    <TextField fx:id="teamCity" layoutX="401.0" layoutY="93.0" prefHeight="25.0" prefWidth="141.0" />
    <TableView fx:id="playersTable" editable="true" layoutX="58.0" layoutY="132.0" prefHeight="166.0" prefWidth="484.0">
        <columns>
            <TableColumn prefWidth="176.0" text="FirstName">
                <cellValueFactory><PropertyValueFactory property="firstName" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn minWidth="3.0" prefWidth="215.0" text="LastName">
                <cellValueFactory><PropertyValueFactory property="lastName" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="92.0" text="Number">
                <cellValueFactory><PropertyValueFactory property="jerseyNumber" />
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
    <TextField fx:id="newFirstName" layoutX="58.0" layoutY="298.0" prefHeight="25.0" prefWidth="119.0" promptText="FirstName" />
    <TextField fx:id="newLastName" layoutX="190.0" layoutY="298.0" prefHeight="25.0" prefWidth="119.0" promptText="LastName" />
    <Spinner fx:id="newNumber" editable="true" layoutX="321.0" layoutY="298.0" prefHeight="25.0" prefWidth="125.0" promptText="Number">
        <valueFactory>
            <SpinnerValueFactory.IntegerSpinnerValueFactory min="0" max="99"/>
        </valueFactory>
    </Spinner>
    <Button layoutX="468.0" layoutY="298.0" mnemonicParsing="false" onAction="#addPlayerToTable" text="Add Player" />
    <Button layoutX="495.0" layoutY="349.0" mnemonicParsing="false" onAction="#createNewTeam" text="Finish" />
</AnchorPane>
